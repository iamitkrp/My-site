}
.stroke {
  display: block;
  background: var(--text-color-dark);
  height: 100%;
  width: 2px;
  border-radius: 50px;
  margin: 0 3px;
  animation: animate 1.2s linear infinite;
  animation-play-state: paused;
  pointer-events: auto;
}
.stroke.body.dark {
  background: var(--text-color-light);
}
@keyframes animate {
  50% {
    height: 20%;
  }
  100% {
    height: 100%;
  }
}
.stroke:nth-child(1) {
  animation-delay: 0s;
}
.stroke:nth-child(2) {
  animation-delay: 0.3s;
}
.stroke:nth-child(3) {
  animation-delay: 0.6s;
}
.stroke:nth-child(4) {
  animation-delay: 0.3s;
}
.stroke:nth-child(5) {
  animation-delay: 0s;
}
