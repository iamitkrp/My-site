/* =============================================================================================
* General Purpose CSS
============================================================================================= */
@import url("https://fonts.googleapis.com/css2?family=Roboto+Mono&family=Roboto:wght@400;700&display=swap");

@font-face {
  font-family: "st";
  src: url("../static/Fonts/st.woff2") format("woff2");
  font-display: block;
}
@font-face {
  font-family: "stx";
  src: url("../static/Fonts/stx.woff2") format("woff2");
  font-display: block;
}
:root {
  --main-bg-color-dark: #070707;
  --main-bg-color-light: #fff;
  --text-color-dark: #b3b3b3;
  --text-color-light: #000;
  --hover-color-dark: grey;
  --d: 2500ms;
  --angle: 90deg;
  --gradX: 100%;
  --gradY: 50%;
  --c1: rgba(253, 253, 253, 1);
  --c2: grey;
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
a {
  text-decoration: none;
  color: inherit;
}
body {
  /* overflow-x: hidden; */
  background: var(--main-bg-color-light);
  color: var(--text-color-light);
}
body.dark {
  background: var(--main-bg-color-dark);
  color: var(--text-color-dark);
}
body.dark a {
  color: var(--text-color-dark);
}
.webgl {
  position: fixed;
  top: 0;
  left: 0;
  outline: none;
}
/* =============================================================================================
* Loading page
============================================================================================= */
#loader-page {
  width: 100vw;
  height: 100vh;
  background: var(--main-bg-color-light);
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-weight: 400;
  overflow: hidden;
  text-align: center;
  position: absolute;
  font-family: "Roboto Mono", monospace;
}
#app > #loader-page > .word {
  bottom: 0;
  color: #000;
  font-size: 18px;
  height: 2.5em;
  left: 0;
  line-height: 2.5em;
  margin: auto;
  right: 0;
  position: absolute;
  text-shadow: 0 0 10px #ffffff66, 0 0 5px #ffffff66;
  top: 0;
}

#app > #loader-page > .word span {
  display: inline-block;
  transform: translateX(100%) scale(0.9);
  transition: transform 500ms;
}

#app > #loader-page > .word > .done {
  color: #000;
  transform: translateX(0) scale(1);
}

.temp {
  width: 10px;
  height: 10px;
}
.loading-container {
  width: 300px;
  height: 4px;
  border-radius: 10px;
  margin-top: 50px;
  font-size: 16px;
  border: 1px solid #535353;
  transition: all 0.3s ease-in-out;
  transform: translateX(-10px);
}
.loading-progress {
  width: 0px;
  height: 4px;
  background: var(--main-bg-color-dark);
  border-radius: 10px;
  transition: all 0.3s ease-in-out;
  position: relative;
  box-shadow: 0px 0px 80px 1px #fff;
}
.loading-percentage {
  margin-top: 8px;
  color: #fff;
  font-size: 18px;
  transform: translateX(-10px);
}
